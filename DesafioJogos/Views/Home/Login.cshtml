@{
    ViewBag.Title = "Login";
}

@section scripts{
    @Scripts.Render("~/Scripts/Sistema/Home/Login.js")
    <script>
        $('.desabilitarMenu').each(function () {
            $(this).hide()
        });
    </script>
}

@section body {
    <section>
        <fieldset>
            <legend> @ViewBag.Title</legend>

            @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="txtLogin" class="col-sm-2 control-label">* Login</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control required" id="txtLogin" name="login" placeholder="Login">
                    </div>
                </div>
                <div class="form-group">
                    <label for="txtSenha" class="col-sm-2 control-label">* Senha</label>
                    <div class="form col-sm-3">
                        <input type="password" class="form-control required" id="txtSenha" name="senha" placeholder="Senha">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary btn-default" title="Login">Login</button>
                    </div>
                </div>
            }

        </fieldset>
    </section>
}
